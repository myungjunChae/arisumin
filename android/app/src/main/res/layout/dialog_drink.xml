<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_drink_bg"
        android:minWidth="281dp"
        android:minHeight="182dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="물 마시기"
            android:textColor="@color/colorDeepBlack"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/notosans_regular"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/icon_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/qr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="58dp"
            android:src="@drawable/bt_qr_camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/notosans_light"
            android:text="음수대 QR 촬영"
            android:textColor="@color/colorDeepBlack"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@id/qr_btn"
            app:layout_constraintStart_toStartOf="@id/qr_btn"
            app:layout_constraintEnd_toEndOf="@id/qr_btn"/>

        <ImageView
            android:id="@+id/drink_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="42dp"
            android:src="@drawable/bt_water_drink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/notosans_light"
            android:text="마시기"
            android:textColor="@color/colorDeepBlack"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@id/drink_btn"
            app:layout_constraintStart_toStartOf="@id/drink_btn"
            app:layout_constraintEnd_toEndOf="@id/drink_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>