<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:grid="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/remainder_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="33dp"
            android:textSize="19sp"
            android:text="4번 더 마시면"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/compensation_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="이온 음료가 무료!!"
            app:layout_constraintStart_toStartOf="@id/remainder_notice_text"
            app:layout_constraintTop_toBottomOf="@id/remainder_notice_text" />

        <TextView
            android:id="@+id/remainder_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="19sp"
            android:text="6 / 10"
            app:layout_constraintBottom_toBottomOf="@id/compensation_notice_text"
            app:layout_constraintEnd_toEndOf="parent" />

        <GridLayout
            android:id="@+id/coupon_grid"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorSkyBlue"
            android:columnCount="5"
            android:orientation="horizontal"
            android:rowCount="2"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/compensation_notice_text">
        </GridLayout>

        <View
            android:id="@+id/split_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:background="@color/colorGray9D"
            app:layout_constraintBottom_toTopOf="@id/coupon_using_notice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coupon_grid" />

        <TextView
            android:id="@+id/coupon_using_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayF8"
            android:paddingStart="12dp"
            android:paddingTop="18dp"
            android:paddingEnd="12dp"
            android:paddingBottom="18dp"
            android:text="@string/stamp_notice"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
